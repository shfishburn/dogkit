---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { loadManufacturerDb } from "../../lib/loaders";

const db = await loadManufacturerDb();

const candidates = [...(db.candidates ?? [])].sort((a, b) => (a.rank ?? 0) - (b.rank ?? 0));
---

<BaseLayout title="Admin — Manufacturer">
  <div class="prose">
    <h1>Manufacturer candidates</h1>
    <p class="small">Source: data/app/manufacturer/manufacturer.json</p>

    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Location</th>
          <th>Type</th>
          <th>Ideal stage</th>
        </tr>
      </thead>
      <tbody>
        {candidates.map((c) => (
          <tr>
            <td>{c.rank}</td>
            <td>
              <div>
                <strong>{c.name}</strong>
                {c.website ? (
                  <div class="small"><a href={c.website} target="_blank" rel="noreferrer">{c.website}</a></div>
                ) : null}
              </div>
            </td>
            <td>{c.location ?? ""}</td>
            <td>{c.type ?? ""}</td>
            <td>{c.ideal_stage ?? ""}</td>
          </tr>
        ))}
      </tbody>
    </table>

    {candidates.map((c) => (
      <section id={String(c.rank)}>
        <h2>#{c.rank} — {c.name}</h2>
        {c.description ? <p>{c.description}</p> : null}

        {c.fit_notes?.length ? (
          <>
            <h3>Fit notes</h3>
            <ul>
              {c.fit_notes.map((n) => (
                <li>{n}</li>
              ))}
            </ul>
          </>
        ) : null}

        {c.risks?.length ? (
          <>
            <h3>Risks</h3>
            <ul>
              {c.risks.map((r) => (
                <li>{r}</li>
              ))}
            </ul>
          </>
        ) : null}
      </section>
    ))}

    <h2>Raw JSON</h2>
    <pre><code>{JSON.stringify(db, null, 2)}</code></pre>
  </div>
</BaseLayout>
